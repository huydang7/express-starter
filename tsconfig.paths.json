{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src": ["src"],
      "@src/*": ["src/*"],
      "@configs": ["src/configs"],
      "@configs/*": ["src/configs/*"],
      "@controller": ["src/controller"],
      "@controller/*": ["src/controller/*"],
      "@database": ["src/database"],
      "@database/*": ["src/database/*"],
      "@exceptions": ["src/exceptions"],
      "@exceptions/*": ["src/exceptions/*"],
      "@interfaces": ["src/interfaces"],
      "@interfaces/*": ["src/interfaces/*"],
      "@middlewares": ["src/middlewares"],
      "@middlewares/*": ["src/middlewares/*"],
      "@models": ["src/models"],
      "@models/*": ["src/models/*"],
      "@services": ["src/services"],
      "@services/*": ["src/services/*"],
      "@shared": ["src/shared"],
      "@shared/*": ["src/shared/*"]
    }
  }
}
